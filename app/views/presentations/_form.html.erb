<%= form_with(model: presentation) do |form| %>
  <% if presentation.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(presentation.errors.count, "error") %> prohibited this presentation from being saved:</h2>

      <ul>
        <% presentation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="signup">
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :date, style: "display: block" %>
      <%= form.date_field :date %>
    </div>

    <div>
      <strong><p>Select Presenters (Hold control/command to select multiple)</p></strong>
      <%= form.collection_select(:user_ids, User.all, :id, :name, {:include_blank => false}, {:multiple => true}) %>
    </div>

    <div>
      <%= form.submit "Create Presentation", class: "btn btn-primary btn-large" %>
    </div>
  </div>
<% end %>

