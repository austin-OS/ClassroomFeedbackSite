<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "FeedBackEr", root_path, id: "emblem" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>

        <%# non-logged in links %>
        <% if !logged_in? %>
         <li><%= link_to "Log In", login_path %></li>
        <% else %>
        
        <li><%= link_to "Users", users_path %></li>
        <% if current_user.admin? %>
          <li><%= link_to "Assign FeedBack", feedback_assignments_path %></li>
          <li><%= link_to "Presentations", presentations_path %></li>
        <% else %>
          <li><%= link_to "Assigned FeedBack", feedback_assignments_path %></li>
          <li><%= link_to "My Presentations", presentations_path %></li>
        <% end %>
          <%# admin links %>
          <% if current_user.admin? %>
            <li><%= link_to "Feedback Forms", feedback_forms_path %></li>
            
          <% end %>

          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              Account <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "My Info", current_user %></li>
              <li><%= link_to "Edit", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log Out", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>